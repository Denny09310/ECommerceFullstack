@inherits LayoutComponentBase

<div class="flex h-screen flex-col">
    <header class="flex-shrink-0 flex min-h-16 items-center gap-2 px-2">
        <div class="flex-grow"></div>
        <AuthorizeView>
            <Authorized>
                <ShoelaceAvatar Initials="@context.User.Identity?.Name?.Substring(0, 2)" />
            </Authorized>
            <NotAuthorized>
                <ShoelaceIconButton Name="box-arrow-in-right" Style="font-size: 1.5rem" Href="authentication/login" />
            </NotAuthorized>
        </AuthorizeView>
    </header>

    <main class="flex-grow">
        @Body
    </main>
</div>